---
layout:layout.njk
---

<h1> {{title}} </h1>

<section class="recipe-ingredients">
  <h2>Ingredients:</h2>
  <ul>
    {% for item in ingredients %}
    <li>{{ item.quantity }} {{ item.units }} {{ item.name }}</li>
    {% endfor %}
  </ul>
</section>

<section class="recipe-cookware">
  <h2>Cookware:</h2>
  <ul>
    {% for item in cookware %}
    <li>
      {{ item.name }}
    </li>
    {% endfor %}
  </ul>
</section>

<section class="recipe-instructions">
  <h2>Instructions</h2>
  <ul>
    {% for step in steps %}
    <li>
      {%- for item in step -%}
      {{ item | safe }}
      {%- endfor -%}
    </li>
    {% endfor %}
  </ul>
</section>